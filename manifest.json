{
    "manifest_version": 3,
    "name": "AI Browser Extension",
    "short_name": "aibrowserext",
    "version": "1.0",
    "author": "Your Name",

    "description": "A framework for creating AI-powered browser extensions with support for any OpenAI-compatible provider",

    "content_scripts": [
        {
            "matches": [ "*://mail.google.com/*" ],
            "js": [
                "src/extensionInjector.js"
            ],
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": [{
        "resources": [
            "dist/gmailJsLoader.js",
            "dist/extension.js",
            "dist/aiService.js",
            "dist/configManager.js",
            "dist/settingsPanel.js",
            "dist/index.js",
            "dist/gmailJsLoader.js.map",
            "dist/extension.js.map",
            "dist/aiService.js.map",
            "dist/configManager.js.map",
            "dist/settingsPanel.js.map",
            "dist/index.js.map"
        ],
        "matches": ["<all_urls>"]
    }],
    "host_permissions": [
        "https://*.google.com/*",
        "https://api.openai.com/*",
        "https://api.together.xyz/*",
        "https://api.anthropic.com/*",
        "http://localhost:11434/*"
    ],
    "permissions": [
        "storage",
        "unlimitedStorage"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "AI Browser Extension"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}